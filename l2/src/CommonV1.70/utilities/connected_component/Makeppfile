# Top level makefile for the connected_component Program
NOSHAPE := true
include standard_defs.mk
global CPP CPPFLAGS DEFINES LIBS GDAL_BUILD_FLAG SHAPE_BUILD_FLAG COMMON_DIR

ifeq ($(GDAL_BUILD_FLAG), true)

 OBJECTS := main.o connected_component.o params/params.o image/image.o

 ifsys msys
  EXEC := connected_component.exe
 else
  EXEC := connected_component
 endif

 %.o: %.cc
     $(CPP) -c $(CPPFLAGS) $(DEFINES) $(input) -o $(output)

 $(EXEC): $(OBJECTS)
    $(CPP) $(inputs) -o $(output) $(LIBS)

 install: $(EXEC)
    mv $(EXEC) $(INSTALL_DIR)

 .PHONY: install

else

 install:
   @&echo "GDAL not installed on your system. Build aborted."

 .PHONY: install

endif
