# Top level makefile for the shape_overlay Program
include standard_defs.mk
global CPP CPPFLAGS DEFINES LIBS GDAL_BUILD_FLAG SHAPE_BUILD_FLAG COMMON_DIR

ifeq ($(SHAPE_BUILD_FLAG), true)

  OBJECTS := main.o shape_overlay.o params/params.o image/image.o shape/shape.o point/point.o

  ifsys msys
   EXEC := shape_overlay.exe
  else
   EXEC := shape_overlay
  endif

 %.o: %.cc
     $(CPP) -c $(CPPFLAGS) $(DEFINES) $(input) -o $(output)

  $(EXEC): $(OBJECTS)
    $(CPP) $(inputs) -o $(output) $(LIBS)

  install: $(EXEC)
     mv $(EXEC) $(INSTALL_DIR)

  .PHONY: install

else

  install:
    @&echo "Build aborted."

  .PHONY: install

endif
